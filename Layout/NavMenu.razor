@inject NavigationManager navigation
@inject IJSRuntime JsRuntime

<MudAppBar>
    <MudMenu Dense
    Variant="Variant.Text"
    Size="Size.Medium"
    Color="Color.Dark"
    Icon="@Icons.Material.TwoTone.List">
        <MudMenuItem 
            Icon="@Icons.Material.Outlined.Home"
            OnClick="IrParaHome">Inicio</MudMenuItem>

        <MudDivider />

        <MudMenuItem
            Icon="@Icons.Material.Outlined.TextFields"
            OnClick="GoToSeparadorTxt">Separador De texto</MudMenuItem>

        <MudDivider />

        <MudMenuItem 
            Icon="@Icons.Material.Outlined.Gamepad"
            OnClick="IrParaGamingReport">GamingRank</MudMenuItem>

        <MudDivider/>
    </MudMenu>

    <MudSpacer />
    <MudButton 
    OnClick="GoToProjeto"
    Style="color: white"
    EndIcon="@Icons.Custom.Uncategorized.Folder">
        Projetos
    </MudButton>

    <MudButton Size="Size.Large" 
    OnClick="DownloadCurriculum"
    EndIcon="@Icons.Custom.FileFormats.FilePdf" 
    Style="color: white; margin-left: auto;">
        Currículo
    </MudButton>

</MudAppBar>

@code
{

    void GoToProjeto()
    {
        navigation.NavigateTo("Projetos");
    }

    void GoToSeparadorTxt()
    {
        navigation.NavigateTo("separadortxt");
    }

    void IrParaHome()
    {
        navigation.NavigateTo("/");
    }

    void IrParaGamingReport()
    {
        navigation.NavigateTo("gamingreport");
    }

    void DownloadCurriculum()
    {
        JsRuntime.InvokeVoidAsync("downloadFileFromUrl", "Paulo.pdf",
            "https://drive.google.com/uc?export=download&id=1QsnOIZzty-70RfSCt05uqzXgCkZnsL0I");
    }
}
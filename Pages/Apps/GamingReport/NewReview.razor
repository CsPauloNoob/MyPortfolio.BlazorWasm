@layout LayoutAlternativo
@page "/gaming-report/new"
@using MyPortfolio.BlazorWasm.Enums

    <MudInput
        T="string"
        Placeholder="TÃ­tulo"
        MaxLength="250"
        AutoGrow="false"
        AdornmentColor="Color.Dark"
        Style="width: 45%"
        Variant="Variant.Outlined"
        Class="ml-10 mt-8 mb-12" />

<MudPaper Class="mx-10 mt-8 mb-12"
          Elevation="2">
    <MudTextField
        T="string"
        Style="border-color: black; border-style: dashed"
        Lines="20"
        Placeholder="Review"
    />
</MudPaper>

<MudSpacer/>

<MudStack Row Class="justify-space-between mud-width-full">
    <MudStack Spacing="8"
              Class="mx-10 my-15"
              Style="width: 250px">

        <MudText Typo="Typo.h5">Plataforma</MudText>

        <MudSelect @bind-Value="selectedPlataforma"
                   AdornmentColor="Color.Dark"
                   FullWidth="false"
                   AdornmentIcon="@Icons.Material.Rounded.Tv">

            <MudSelectItem T="Plataformas" Value="Plataformas.Xbox">XBOX</MudSelectItem>
            <MudSelectItem T="Plataformas" Value="Plataformas.PlayStation">PlayStation</MudSelectItem>
            <MudSelectItem T="Plataformas" Value="Plataformas.Steam">Steam</MudSelectItem>
            <MudSelectItem T="Plataformas" Value="Plataformas.Nintendo">Nintendo</MudSelectItem>
            <MudSelectItem T="Plataformas" Value="Plataformas.Mobile">Mobile</MudSelectItem>

        </MudSelect>
    </MudStack>

    <MudStack Spacing="8"
              Class="mr-10 my-15"
              Style="width: 250px">
        <MudText Typo="Typo.h5">Nota (1-10)</MudText>
        <MudInput T="decimal"
                  Placeholder="9.5"
                  MaxLength="3"
                  Style="width: 50%"
                  AdornmentColor="Color.Dark"
                  Variant="Variant.Text" />
    </MudStack>
</MudStack>
@code {
    private Plataformas selectedPlataforma;
}